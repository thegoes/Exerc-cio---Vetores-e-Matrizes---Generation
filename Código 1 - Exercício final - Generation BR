programa {
  funcao {
    inteiro tamanho = comprimento
    inteiro i, j
    inteiro temp

    para (i de 0 ate tamanho - 1) {
      para (j de 0 ate tamanho - i - 2) {
        se ([j] < [j + 1]) {
          temp = [j]
          [j] = [j + 1]
          [j + 1] = temp
        }
      }
    }
  }

  inteiros  = [2, 5, 1, 3, 4, 9, 7, 8, 10, 6]

  ordenaDecrescente(vetor)

  escreva("Ordenado em ordem decrescente: ")
  para (inteiro elemento: ) {
    escreva(elemento, " | ")
  }
}
